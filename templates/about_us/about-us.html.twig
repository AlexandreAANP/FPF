{% block  javascripts %}
        {{parent()}}
    <script type="text/javascript">
        $(document).ready(function(){
          $('.about-us-square-plus').on('click', function(){
                    let id = $(this).data('id');
                    let row = $(this).parent().parent().parent().parent().find('.about-us-bg-content');
                    let plus_info = $(this).parent().parent().parent().parent().find('.about-us-plus-info');
                    if($(this).children().hasClass('mdi-plus')){
                        row.slideDown();
                        plus_info.removeClass('d-none');
                        $(this).children().removeClass('mdi-plus');
                        $(this).children().addClass('mdi-minus');
                    }
                    else{
                        row.slideUp();
                        plus_info.addClass('d-none');
                        $(this).children().removeClass('mdi-minus');
                        $(this).children().addClass('mdi-plus');
                    }
                });

          $(".ancora").on("click", function(event){

    $('html, body').animate({
        scrollTop: $($(this).attr("href")).offset().top
    }, 500);

    event.preventDefault();
});
        });
       

    </script>


