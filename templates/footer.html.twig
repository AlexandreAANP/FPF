<footer class="bg-white">
    <div class="footer-top">
        <div class="container">
            <div class="row">
                <div class="order-1 order-lg-1 col-12 col-lg-4 d-flex align-items-center justify-content-center py-3">
                    <a class="btn noLoad">
                    <i class="mdi mdi-swap-horizontal-bold color-purple"></i>
                    <span class="footer-top-text">{%trans%}Exchange Points for experiences{%endtrans%}</span>
                    </a>
                </div>
                <div class="order-2 order-lg-2 col-12 col-lg-4 d-flex align-items-center justify-content-center py-3 footer-top-middle">
                    <a class="btn noLoad">
                    <!-- <span class="material-icons">search</span> -->
                    <i class="mdi mdi-trophy color-purple"></i>
                    <span class="footer-top-text">{%trans%}Convert Tokens in Points{%endtrans%}</span>
                    </a>
                </div>
                <div class="order-3 order-lg-3 col-12 col-lg-4 d-flex align-items-center justify-content-center py-3">
                    <a class="btn noLoad">
                    <i class="mdi mdi-cellphone-text color-purple"></i>
                    <span class="footer-top-text">{%trans%}Get discounts with the app.{%endtrans%}</span>
                    </a>
                </div>
                
            </div>
        </div>
    </div>

    <div class="footer-menu mt-5">
        <div class="container">
           
            <div class="row">
                <div class="col-12 col-lg-5 d-flex flex-column order-1 order-lg-2">
                    <span class="footer-menu-header d-block">{% trans %}Newsletter{% endtrans %}</span>
                    <p>{% trans %}Subscribe our newsletter{% endtrans %}.</p>

                    <div class="d-block mt-2">
                        <div class="input-group">
                            <input type="email" class="form-control" placeholder="{% trans %}Type your Email{% endtrans %}">
                            <span class="input-group-text">
                                <i class="mdi mdi-telegram"></i>
                            </span>
                        </div>
                    </div>

                    <div class="my-4 d-lg-none">
                        <hr>
                    </div>

                </div>
                <div class="col-12 col-lg-7 order-2 order-lg-1">

                <div class='row'>
                     <div class='col'>
                        {% set colContentFooterLinks = LayoutFunctions.getAPI('content?category=richmedia-category-home&area=content-area-page-footer&type=richmedia&fields=url,text,filename&language=' ~ app.request.getLocale())%}
                        <ul class='list-unstyled mb-5'>
                            <li class="footer-menu-header">{% trans %}Quick Acess{% endtrans %}</li>
                             {% for link in colContentFooterLinks.colContent ?? [] %}
                                {% if link.description == "coluna 01" %}
                                    {% if link.url|length == 0 or (link.url|length > 0 and link.text|length > 0) %}
                                        {% set class = "noLoad" %}
                                    {% else %}
                                        {% set class = "" %}
                                    {% endif %}
                                    <li><a class='{{class}}' href="{{link.url}}" {{link.text|length > 0 ? 'target="_blank"' : '' }} title="{{link.title}}">{{link.title}}</a></li>
                                {% endif %}
                                    <!--li><a class='' href="/who-we-are" title="{% trans %}Who we are{% endtrans %}">{% trans %}Who we are{% endtrans %}</a></li>
                                    <li><a class='' href="/Services" title="{% trans %}Services{% endtrans %}">{% trans %}Services{% endtrans %}</a></li>
                                    <li><a class='' href="" title="{% trans %}SLA{% endtrans %}">{% trans %}SLA{% endtrans %}</a></li>
                                    <li><a class='' href="" title="{% trans %}Support{% endtrans %}">{% trans %}Support{% endtrans %}</a></li>
                                    <li><a class='' href="" title="{% trans %}Online Store{% endtrans %}">{% trans %}Online Store{% endtrans %}</a></li>
                                    <li><a class='' href="" title="{% trans %}Blog{% endtrans %}">{% trans %}Blog{% endtrans %}</a></li-->
                         {% endfor %}
                        </ul>
                    </div>
                    <div class='col '>
                        <ul class='list-unstyled mb-5'>
                            <li class="footer-menu-header ">{% trans %}Help{% endtrans %}</li>
                             {% for link in colContentFooterLinks.colContent ?? [] %}
                                {% if link.description == "coluna 02" %}
                                    {% if link.url|length == 0 or (link.url|length > 0 and link.text|length > 0) %}
                                        {% set class = "noLoad" %}
                                    {% else %}
                                        {% set class = "" %}
                                    {% endif %}
                                    <li><a class='{{class}}' href="{{link.url}}" {{link.text}} title="{{link.title}}">{{link.title}}</a></li>
                                    
                                {% endif %}
                            {% endfor %}
                            <!--li><a class='' href="" title="{% trans %}Privacy Policy{% endtrans %}">{% trans %}Privacy Policy{% endtrans %}</a></li>
                            <li><a class="" href="" title="{% trans %}Terms & Conditions{% endtrans %}">{% trans %}Terms & Conditions{% endtrans %}</a></li>
                            <li><a class="" href="" title="{% trans %}Litigation{% endtrans %}">{% trans %}Litigation{% endtrans %}</a></li>
                            <li><a class="" href="" title="{% trans %}Complaint book{% endtrans %}">{% trans %}Complaint book{% endtrans %}</a></li-->
                        </ul>
                    </div>
                     <div class='col '>
                        <ul class='list-unstyled mb-5'>
                            <li class="footer-menu-header ">{% trans %}Contact us{% endtrans %}</li>
                            {% for link in colContentFooterLinks.colContent ?? [] %}
                                {% if link.description == "coluna 03" %}
                                    {% if link.url|length == 0 or (link.url|length > 0 and link.text|length > 0) %}
                                        {% set class = "noLoad" %}
                                    {% else %}
                                        {% set class = "" %}
                                    {% endif %}
                                    <li><a class='{{class}}' href="{{link.url}}" {{link.text}} title="{{link.title}}">{{link.title}}</a></li>
                                    
                                {% endif %}
                            {% endfor %}
                            <!--li><a class='' href="" title="{% trans %}Form{% endtrans %}">{% trans %}Form{% endtrans %}</a></li>
                            <li><a class="" href="" title="{% trans %}Google Maps{% endtrans %}">{% trans %}Google Maps{% endtrans %}</a></li-->
                        </ul>
                    </div>
                </div>

                    {% set colContentFooter = LayoutFunctions.getContentGroup('content?area=content-area-footer&fields=area,url', 'area') %}
                    {% if colContentFooter is iterable and colContentFooter|length > 0 %}
                        <div class="row">
                            <div class="col-12 col-md-6 col-lg-4">
                                <ul class="list-unstyled mb-5">
                                    <li class="footer-menu-header">{% trans %}Quick access{% endtrans %}</li>
                                    <li><a href="{{ baseUri }}/" title="{% trans %}Home{% endtrans %}">{% trans %}Home{% endtrans %}</a></li>
                                </ul>
                            </div>

                            {% if colContentFooter['content-area-help'] is defined %}
                                <div class="col-12 col-md-6 col-lg-4">
                                    <ul class="list-unstyled mb-5">
                                        <li class="footer-menu-header">{% trans %}Help{% endtrans %}</li>
                                        {% for page in colContentFooter['content-area-help'] %}
                                            {% set url = page.referenceKey %}
                                            {% if page.url != '' %}
                                                {% set url = page.url %}
                                            {% endif %}
                                            <li><a href="{{ baseUri }}/{{ url }}" title="{{ page.title }}">{{ page.title }}</a></li>
                                        {% endfor %}
                                    </ul>
                                </div>
                            {% endif %}

                            {% if colContentFooter['content-area-contact-us'] is defined %}
                                <div class="col-12 col-md-6 col-lg-4">
                                    <ul class="list-unstyled mb-5">
                                        <li class="footer-menu-header">{% trans %}Contact us{% endtrans %}</li>
                                        {% for page in colContentFooter['content-area-contact-us'] %}
                                            {% set url = page.referenceKey %}
                                            {% if page.url != '' %}
                                                {% set url = page.url %}
                                            {% endif %}
                                            <li><a href="{{ baseUri }}/{{ url }}" title="{{ page.title }}">{{ page.title }}</a></li>
                                        {% endfor %}
                                    </ul>
                                </div>
                            {% endif %}
                        </div>
                    {% endif %}
                </div>
            </div>

             <div class="row" id="contact"><h2>{% trans %}Contact us{% endtrans %}</h2></div>
            <div class="row" style="margin-bottom: 30px;">
                  {% set formDoubts = null %}
                        {% for i in colDoubts %}
                        {% if i.title == "send-email" %}
                            {% set formDoubts = i %}
                        {% endif %}
                        {% endfor %}
                    <div class="col">
                        <img src="{{formDoubts.filename}}" style="width:100%;">
                    </div>
                    {{formDoubts.text|raw}}
                </div>
        </div>
    </div>

    <div class="payments">
        <div class="container">
            <div class="row">
                <div class="col-12 mb-5">
                    <hr>
                </div>
                <div class="col-12 col-md-9 d-flex flex-wrap flex-column flex-md-row justify-content-center justify-content-md-start">
                    
                    <div class="d-flex flex-wrap">
                        <a class="noLoad" href="#" title="Payments 1">
                            <img src="/assets/images/payments-1.png" alt="Payment 1">
                        </a>
                        <a class="noLoad" href="#" title="Payments 2">
                            <img src="/assets/images/payments-2.png" alt="Payment 2">
                        </a>
                    </div>
                    <div class="d-flex flex-wrap">
                        <a class="noLoad" href="#" title="Paypal">
                            <img src="/assets/images/paypal.png" alt="Paypal">
                        </a>
                        <a class="noLoad" href="#" title="Visa">
                            <img src="/assets/images/visa.png" alt="Visa">
                        </a>
                        <a class="noLoad" href="#" title="Mastercard">
                            <img src="/assets/images/mastercard.png" alt="Mastercard">
                        </a>
                    </div>
                    <div class="d-flex flex-wrap">
                        <a href="#" class="text noLoad" title="Points">Points</a>
                        <a href="#" class="text noLoad" title="Tokens">Tokens</a>
                        <a href="#" class="text noLoad" title="Saldos e Descontos">Saldos e Descontos</a>
                    </div>
                    
                </div>

                <div class="col-12 col-md-3 d-flex flex-column align-items-md-end">
                    <div class="my-5 d-md-none">
                        <hr>
                    </div>

                    <div class="d-flex align-items-center mb-5">
                        {% include "_includes/social_media.html.twig" %}
                    </div>
                </div>
                <div class="col-12 mt-5 mt-md-3">
                    <hr>
                </div>
            </div>
        </div>
    </div>

    <div class="copyright d-flex justify-content-center mb-5">{{ LayoutFunctions.getLayoutVars('COPYRIGHT')|raw }} {{ 'now' | date('Y') }} - {% trans %}All rights reserved{% endtrans %}.</div>

    {% include '_includes/cookie_consent.html.twig' %}
</footer>